<div class="container show-image">
  <h1 class="text-center">お客様情報</h1>
  
  <div class="card mx-auto" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @customer.name %></h5>
      <p class="card-text">誕生日: <%= @customer.birthday %></p>
      <p class="card-text">アレルギー: <%= @customer.allergy %></p>
      <p class="card-text">メモ: <%= @customer.memo %></p>
    </div>
  </div>

  <div class="d-flex justify-content-center mt-4">
    <%= link_to "編集", edit_customer_path(@customer), class: "btn btn-primary mx-2" %>
    <%= link_to "戻る", customers_path, class: "btn btn-secondary mx-2" %>
  </div>
</div>