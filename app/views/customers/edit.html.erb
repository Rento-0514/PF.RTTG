<h1>顧客情報編集</h1>
<%= form_for @customer do |f| %>
  <div class="field">
    <%= f.label :名前 %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :誕生日 %>
    <%= f.date_select :birthday %>
  </div>

  <div class="field">
    <%= f.label :アレルギー %>
    <%= f.text_field :allergy %>
  </div>

  <div class="field">
    <%= f.label :メモ %>
    <%= f.text_area :memo %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "戻る", customer_path(@customer) %>