<div class="container edit-image">
  <h1 class="text-center">顧客情報編集</h1>
  <%= form_for @customer, html: { class: "mx-auto", style: "width: 18rem;" } do |f| %>
    <div class="form-group">
      <%= f.label :名前, class: "form-control-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :誕生日, class: "form-control-label" %>
      <%= f.date_select :birthday, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :アレルギー, class: "form-control-label" %>
      <%= f.text_field :allergy, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :メモ, class: "form-control-label" %>
      <%= f.text_area :memo, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to "戻る", customer_path(@customer), class: "btn btn-secondary" %>
</div>