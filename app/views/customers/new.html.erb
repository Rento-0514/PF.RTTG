<div class="new-image">

<h1>お客様登録</h1>
<%= form_with(model: @customer, url: customers_path, local: true, html: { class: 'new-image' }) do |form| %>
  <div class="form-group">
    <%= form.label :お客様名, class: 'form-label text-uppercase font-weight-bold' %>
    <%= form.text_field :name, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :誕生日, class: 'form-label text-uppercase font-weight-bold' %>
    <%= form.date_field :birthday, class: 'form-control form-control-lg' %>
  </div>

    <div class="form-group">
    <%= form.label :アレルギー, class: 'form-label text-uppercase font-weight-bold' %>
    <%= form.text_field :allergy, class: 'form-control form-control-lg' %>
  </div>

  <div class="form-group">
    <%= form.label :メモ, class: 'form-label text-uppercase font-weight-bold' %>
    <%= form.text_area :memo, class: 'form-control form-control-lg' %>
  </div>

  <%= form.submit '登録', class: 'btn btn-primary btn-lg' %>
<% end %>