<div class="container-fluid px-1 py-5 mx-auto">
  <div class="row d-flex justify-content-center">
    <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
      <h3>予約登録</h3>

      <div class="card">
        <%= form_with(model: @reservation_request, local: true) do |form| %>

        <div class="form-group">
    <%= form.label :customer_id, '顧客' %>
    <%= form.collection_select(:customer_id, Customer.all, :id, :name, { include_blank: '選択してください' }, { class: 'form-control' }) %>
  </div>
  
  <div class="form-group">
    <%= form.label :hotel_id, 'ホテル' %>
    <%= form.collection_select(:hotel_id, Hotel.all, :id, :name, { include_blank: '選択してください' }, { class: 'form-control' }) %>
  </div>
  
  
  <div class="form-group">
    <%= form.label :day, '日付' %>
    <%= form.date_field :day, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :number_of_people, '人数' %>
    <%= form.number_field :number_of_people, class: 'form-control' %>
  </div>
  
  
  
  <div class="form-group">
    <%= form.label :food, '食事' %>
    <%= form.text_field :food, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :course, 'コース' %>
    <%= form.text_field :course, class: 'form-control' %>
  </div>
  
  <div class="form-group">
    <%= form.label :memo, 'メモ' %>
    <%= form.text_area :memo, class: 'form-control' %>
  </div>
  
  
  <div class="form-group">
    <%= form.label :reservation_number, '予約番号' %>
    <%= form.number_field :reservation_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :is_smoking, '喫煙' %>
    <%= form.check_box :is_smoking %>
  </div>

  <div class="form-group">
    <%= form.label :status, '予約済' %>
    <%= form.check_box :status %>
  </div>
  
  <%= form.submit '登録', class: 'btn btn-primary' %>
<% end %>
      </div>
    </div>
  </div>
</div>