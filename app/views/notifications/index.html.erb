<h1>通知一覧</h1>

<ul>
  <% @notifications.each do |notification| %>
    <li>
      <%= link_to notification.reservation_request.customer.name, reservation_request_path(notification.reservation_request) %>
      <% if notification.normal? %>
        <p>利用日です</p>
      <% elsif notification.three_weeks_later? %>
        <p>予約忘れていませんか？</p>
      <% end %>
      <p><%= l(notification.created_at, format: :short) %> に通知されました</p>
      <%= button_to '削除', notification_path(notification), method: :delete, data: { confirm: '本当に削除しますか？' } %>
    </li>
  <% end %>
</ul>