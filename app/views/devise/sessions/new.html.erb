<div class="login-image">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'login-image-form' }) do |f| %>
    <div class="field">
      <%= f.label :email, class: 'bold-text' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'bold-text' %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, class: 'bold-text' %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary btn-lg' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>