<!DOCTYPE html>
<html>
  <head>
    <title>Rttg</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <!-- BootstrapのCSSを追加 -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark"> <!-- 背景色を紺色に -->
      <%= link_to "RTTG", root_path, class: "navbar-brand" %>

      <div class="collapse navbar-collapse">
        <ul class="navbar-nav ml-auto"> <!-- リンクを右側に表示 -->
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <%= yield %>

  <footer class="footer fixed-bottom py-3 bg-dark">
  <div class="container">
    <div class="d-flex justify-content-end">
      <%= link_to '利用規約', terms_path, class: 'text-light' %>
      <span class="mx-3 text-light">|</span>
      <%= link_to 'プライバシーポリシー', privacy_path, class: 'text-light' %>
    </div>
  </div>
</footer>
</body>
  </body>
</html>
